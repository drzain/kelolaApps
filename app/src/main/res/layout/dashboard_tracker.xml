<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/formcolor"

       >
    <ScrollView
        android:id="@+id/tracker_scroll"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rel_form"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <TextView
                    android:id="@+id/tracker_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/colorBackground"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Track Your Waste"
                    />

                <ImageView
                    android:id="@+id/img_loc"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="25dp" />
            </RelativeLayout>



            <!---->

            <RelativeLayout
                android:id="@+id/tracker_form"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:padding="10px"
                >

                <android.support.v7.widget.CardView
                    android:id="@+id/tracker_form2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:id="@+id/rel_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">

                        <LinearLayout
                            android:id="@+id/trackerRsHeader"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtHeader"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="15dp"
                                android:text="RSUD Kariadi"
                                android:textColor="@color/black"
                                android:textSize="@dimen/size_storage"
                                android:textStyle="normal|bold" />



                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/wasteProduced"
                            android:layout_below="@+id/trackerRsHeader"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/wasteProduced_txt"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:hint="Waste Produced"
                                android:textColor="#0000ff"
                                android:textSize="@dimen/size_storege_sub"
                                android:textStyle="normal|bold" />
                            <TextView
                                android:id="@+id/wasteProduced_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:hint="0.0"
                                android:textColor="#0000ff"
                                android:textSize="@dimen/size_storege_sub"
                                android:textStyle="normal|bold" />

                            <TextView
                                android:id="@+id/wasteProduced_kg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:hint="Kg"
                                android:textColor="#0000ff"
                                android:textSize="@dimen/size_storege_sub"
                                android:textStyle="normal|bold" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/processed"
                            android:layout_below="@+id/wasteProduced"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/processed_txt"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:hint="Processed"
                                android:textColor="#0000ff"
                                android:textSize="@dimen/size_storege_sub"
                                android:textStyle="normal|bold" />
                            <TextView
                                android:id="@+id/processed_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:hint="xxx"
                                android:textColor="#0000ff"
                                android:textSize="@dimen/size_storege_sub"
                                android:textStyle="normal|bold" />
                            <TextView
                                android:id="@+id/processed_persen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:hint="%"
                                android:textColor="#0000ff"
                                android:textSize="@dimen/size_storege_sub"
                                android:textStyle="normal|bold" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/inTransit"
                            android:layout_below="@+id/processed"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:orientation="horizontal">
                            <TextView

                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:hint="In Transit"
                                android:textColor="#0000ff"
                                android:textSize="@dimen/size_storege_sub"
                                android:textStyle="normal|bold" />
                            <TextView
                                android:id="@+id/inTransit_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:hint="0.0"
                                android:textColor="#0000ff"
                                android:textSize="@dimen/size_storege_sub"
                                android:textStyle="normal|bold" />
                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:hint="Kg"
                                android:textColor="#0000ff"
                                android:textSize="@dimen/size_storege_sub"
                                android:textStyle="normal|bold" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/landfill"
                            android:layout_below="@+id/inTransit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:orientation="horizontal">
                            <TextView

                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:hint="Landfill"
                                android:textColor="#0000ff"
                                android:textSize="@dimen/size_storege_sub"
                                android:textStyle="normal|bold" />
                            <TextView
                                android:id="@+id/landfill_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:hint="0.0"
                                android:textColor="#0000ff"
                                android:textSize="@dimen/size_storege_sub"
                                android:textStyle="normal|bold" />
                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:hint="Kg"
                                android:textColor="#0000ff"
                                android:textSize="@dimen/size_storege_sub"
                                android:textStyle="normal|bold" />
                        </LinearLayout>


                    </RelativeLayout>
                </android.support.v7.widget.CardView>




            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>