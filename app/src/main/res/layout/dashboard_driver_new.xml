<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/formcolor"
    >
    <ScrollView
        android:id="@+id/driver_scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rel_form"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <TextView
                    android:id="@+id/driver_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/colorBackground"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Transporter"
                    />
                <ImageView
                    android:id="@+id/img_loc"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="25dp" />
            </RelativeLayout>



            <!---->

            <RelativeLayout
                android:id="@+id/driver_forms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <android.support.v7.widget.CardView
                    android:id="@+id/driver_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp"
                    android:layout_marginBottom="10dp">

                    <RelativeLayout
                        android:id="@+id/rel_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">
                        <TextView
                                android:id="@+id/txtHeader"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="15dp"
                                android:text="RSUD Kariadi"
                                android:textColor="@color/black"
                                android:textSize="@dimen/size_storage"
                                android:textStyle="normal|bold" />
                            <Button
                                android:layout_marginRight="20dp"
                                android:id="@+id/btn_take1"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:background="@color/white"
                                android:textColor="@color/df_green"
                                android:text="Take Order"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/driver_form2"
                    android:layout_below="@+id/driver_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp"
                    android:layout_marginBottom="10dp">

                    <RelativeLayout
                        android:id="@+id/rel_detail2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">
                        <TextView
                            android:id="@+id/txtHeader2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:text="RSUD Adam Malik"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size_storage"
                            android:textStyle="normal|bold" />
                        <Button

                            android:layout_marginRight="20dp"
                            android:id="@+id/btn_take2"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:background="@color/white"
                            android:textColor="@color/df_green"
                            android:text="Take Order"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>




            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>