<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/toolbar"
        android:background="@color/white">
        <TextView
            android:id="@+id/textDashboard"
            android:text="Hi,"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:src="@drawable/man" />
    </android.support.v7.widget.CardView>
    <ScrollView
        android:id="@+id/scroll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <android.support.v7.widget.CardView
                        android:id="@+id/car4"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_margin="11dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">
                        <RelativeLayout
                            android:id="@+id/fitur"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/design_default_color_primary_dark">
                        <TextView
                                fontPath="fonts/Poppins-SemiBold.otf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:text="Fitur Kelola"
                                android:textColor="@color/white"
                                android:textSize="17sp"
                                tools:ignore="MissingPrefix"                                />
                        </RelativeLayout>


                            <LinearLayout
                                android:id="@+id/garis"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@id/fitur"
                                android:layout_marginTop="10dp"
                                android:background="@color/white"
                                android:orientation="horizontal" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/garis"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:id="@+id/hospital"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_weight="0.50"
                                    android:background="?attr/selectableItemBackground">

                                    <ImageView
                                        android:id="@+id/imgHospital"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"

                                        android:src="@drawable/ic_hospital" />

                                    <TextView
                                        fontPath="fonts/Poppins-Medium.otf"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/imgHospital"
                                        android:gravity="center"
                                        android:text="Hospital"
                                        android:textColor="@color/black"
                                        android:textSize="12dp"
                                        tools:ignore="MissingPrefix" />

                                </LinearLayout>

                            <LinearLayout
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:id="@+id/operator"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:layout_weight="0.50"
                                    android:background="?attr/selectableItemBackground">

                                    <ImageView
                                        android:id="@+id/imgProcess"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_centerHorizontal="true"
                                        android:src="@drawable/ic_driver" />

                                    <TextView
                                        fontPath="fonts/Poppins-Medium.otf"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/imgProcess"
                                        android:gravity="center"
                                        android:text="Processing"
                                        android:textColor="@color/black"
                                        android:textSize="12dp"
                                        tools:ignore="MissingPrefix" />

                            </LinearLayout>

                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                    android:id="@+id/driver"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"

                                    android:layout_weight="0.50"
                                    android:background="?attr/selectableItemBackground">

                                    <ImageView
                                        android:id="@+id/imgDriver"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_centerHorizontal="true"
                                        android:src="@drawable/ic_driver4" />

                                    <TextView
                                        fontPath="fonts/Poppins-Medium.otf"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/imgDriver"
                                        android:gravity="center"
                                        android:text="Transpoter"
                                        android:textColor="@color/black"
                                        android:textSize="12dp"
                                        tools:ignore="MissingPrefix" />

                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                    android:id="@+id/tracker"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_weight="0.50"
                                    android:background="?attr/selectableItemBackground">

                                    <ImageView
                                        android:id="@+id/imgTrack"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_centerHorizontal="true"
                                        android:src="@drawable/ic_add_location_black_50dp" />

                                    <TextView

                                        fontPath="fonts/Poppins-Medium.otf"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/imgTrack"
                                        android:gravity="center"
                                        android:text="Tracking"
                                        android:textColor="@color/black"
                                        android:textSize="12dp"
                                        tools:ignore="MissingPrefix" />

                            </LinearLayout>
                            </LinearLayout>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>


                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/txtnew1"
                    fontPath="fonts/Poppins-Bold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="News"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix" />

                <TextView
                    fontPath="fonts/Poppins-Regular.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtnew1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="Berisikan berita - berita terbaru"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    tools:ignore="MissingPrefix" />


            </RelativeLayout>
            <HorizontalScrollView
                android:id="@+id/scrollNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10px">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="true"
                android:orientation="horizontal"
                android:weightSum="1">
                <android.support.v7.widget.CardView
                    android:id="@+id/new1"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.33"
                    android:clickable="true"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="96dp">

                        <ImageView
                            android:id="@+id/newsThumbnailImageView"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:contentDescription="@null" />

                        <TextView
                            android:id="@+id/newsTitleTextView"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textStyle="bold"
                            android:padding="16dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/new2"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.33"
                    android:clickable="true"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="96dp">

                        <ImageView
                            android:id="@+id/newsThumbnailImageView2"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:contentDescription="@null" />

                        <TextView
                            android:id="@+id/newsTitleTextView2"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textStyle="bold"
                            android:padding="16dp" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>
            </HorizontalScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/txtChart"
                    fontPath="fonts/Poppins-Bold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="Report Chart"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix" />

                <TextView
                    fontPath="fonts/Poppins-Regular.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtChart"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="Berisikan grafik laporan"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    tools:ignore="MissingPrefix" />
            </RelativeLayout>

        <HorizontalScrollView
            android:id="@+id/scrollChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10px"            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="true"
                android:orientation="horizontal"
                android:weightSum="1">
                <android.support.v7.widget.CardView
                    android:id="@+id/chart1"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_margin="10dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.33"
                    android:clickable="true"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground">

                        <com.github.mikephil.charting.charts.PieChart
                            android:layout_gravity="center"
                            android:id="@+id/reportChart1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </com.github.mikephil.charting.charts.PieChart>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/chart2"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.33"
                    android:clickable="true"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground">

                        <com.github.mikephil.charting.charts.PieChart
                            android:layout_gravity="center"
                            android:id="@+id/reportChart2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </com.github.mikephil.charting.charts.PieChart>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>
        </LinearLayout>

    </ScrollView>
<!--            </LinearLayout>-->

</LinearLayout>




