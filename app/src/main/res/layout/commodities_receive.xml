<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_umkm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dip"
    android:layout_marginTop="5dip"
    android:layout_columnWeight="1"
    android:layout_rowWeight="1"
    app:cardElevation="6dp"
    android:foreground="?attr/selectableItemBackground">

    <GridLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="1"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dip">

            <ImageView
                android:id="@+id/imgTrash_umkm"
                android:layout_width="60dp"
                android:layout_height="65dp"
                android:src="@drawable/ic_received" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="130dp"
            android:orientation="vertical"
            android:padding="5dip">

            <TextView
                android:id="@+id/code_uuid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dip"
                android:text="Code Transaksi"
                android:textStyle="bold"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/qty_umkm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textSize="14dp"
                android:maxLines="1"
                android:paddingLeft="5dip"
                android:text="Qty Trash" />

            <TextView
                android:id="@+id/dateTransaksi_umkm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dip"
                android:text="Tanggal Transaksi" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="right|top"
            android:padding="5dip">

            <ImageView
                android:id="@+id/imgOk_umkm"
                android:layout_gravity="center_horizontal"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:src="@drawable/ok" />

            <!--<Button
                android:id="@+id/receiveBtn"
                android:layout_width="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@color/ms_white"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Receive" />-->
        </LinearLayout>

    </GridLayout>

</android.support.v7.widget.CardView>