<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/roleView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"    >


    <LinearLayout
        android:id="@+id/afterAnimationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/textSignUpRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/signUpRole"
            android:text="Role Profile"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:textSize="30dp" />


        <LinearLayout
            android:id="@+id/signUpRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/auth_nextBtnRole"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/signUpRoles"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:text="Role"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorTextView">

                    <Spinner
                        android:id="@+id/roleSpin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="10dp"
                        android:textSize="20dp" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/signUpCom"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:text="Company"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorTextView">

                    <Spinner
                        android:id="@+id/comSpin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="10dp"
                        android:textSize="20dp" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/signUpComNm"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColorHint="@color/colorTextView">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/comEditNm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:hint="Company Name"
                        android:inputType="text"
                        android:textColor="@color/colorTextView"
                        android:textColorHint="@color/colorAccent"
                        android:textSize="20dp" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>




        </LinearLayout>

        <Button
            android:id="@+id/auth_nextBtnRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTextView"
            android:gravity="center"
            android:text="Next"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:id="@+id/auth_backRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Back"
            android:textAlignment="center"
            android:textColor="@color/colorTextView"
            android:layout_marginBottom="70dp"/>

    </LinearLayout>
</ScrollView>